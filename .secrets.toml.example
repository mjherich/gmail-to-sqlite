# Secrets configuration for gmail-to-sqlite
# Copy this file to .secrets.toml and add your actual API keys and data directory
# This file should NOT be committed to version control

# Data directory where SQLite database and credentials will be stored
# This path can be absolute or relative to the project directory
DATA_DIR = "/path/to/your/gmail-data"

# OpenAI API Key - Required for OpenAI chat functionality
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "your-openai-api-key-here"

# Google AI API Key - Required for Gemini chat functionality  
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY = "your-google-api-key-here"

# Anthropic API Key - Required for Claude chat functionality
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY = "your-anthropic-api-key-here"
