# Secrets configuration for gmail-to-sqlite
# Copy this file to .secrets.toml and add your actual API keys and data directory
# This file should NOT be committed to version control

# AI API Keys - Required for AI chat functionality
OPENAI_API_KEY = "your-openai-api-key-here"
GOOGLE_API_KEY = "your-google-api-key-here"
ANTHROPIC_API_KEY = "your-anthropic-api-key-here"

# Account configuration with personalization
# Each account gets its own data directory and user context
[[ACCOUNT]]
name = "personal"
data_dir = "/path/to/your/gmail-data"
# User personalization for AI chat
user_name = "Your Name"
user_email = "your.email@example.com"
bio = "Brief description of yourself and work context"
custom_instructions = "Custom instructions for how the AI should interact with you"

